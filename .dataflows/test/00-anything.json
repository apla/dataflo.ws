	"http-initiator": {
		"expect": "ok",
		"tasks": [{
			"$class":"remoteResource",
			"$method": "toBuffer",
			"url": "http://127.0.0.1:<$initiator.http.port>/favicon.ico",
			"successCodes": "2xx",
			"$setOnFail": "favicon"
		}, {
			"$function": "throwUnlessEqual",
			"$args": [404, "{$favicon.code}", "favicon http response:"],
			"$important": true
		}, {
			"$class":"remoteResource",
			"$method": "toBuffer",
			"url": "http://127.0.0.1:<$initiator.http.port>/index.html",
			"successCodes": "2xx",
			"$set": "indexPage"
		}, {
			"$function": "throwUnlessEqual",
			"$args": [200, "{$indexPage.code}", "index page http response:"],
			"$important": true
		}, {
			"$class":"remoteResource",
			"$method": "toBuffer",
			"url": "http://127.0.0.1:<$initiator.http.port>/test/post",
			"bodyData": {
				"a": "b",
				"c": "d"
			},
			"successCodes": "2xx",
			"$set": "postObj"
		}, {
			"$function": "JSON.parse",
			"$args": ["{$postObj.data}"],
			"$set": "postData"
		}, {
			"$function": "throwUnlessEqual",
			"$args": ["b", "{$postData.fields.a}", "post page http response:"],
			"$important": true
		}, {
			"$function": "throwUnlessEqual",
			"$args": ["d", "{$postData.fields.c}", "post page http response:"],
			"$important": true
		}, {
			"$class":"remoteResource",
			"$method": "toBuffer",
			"url": "http://127.0.0.1:<$initiator.http.port>/test/redirect",
			"successCodes": "2xx",
			"$set": "redirectObj"
		}, {
			"$function": "JSON.parse",
			"$args": ["{$redirectObj.data}"],
			"$set": "redirectData"
		}, {
			"$function": "throwUnlessEqual",
			"$args": ["auth=123", "{$redirectData.cookie}", "redirect cookie page http response:"],
			"$important": true
		}, {
			"$class":"remoteResource",
			"$method": "toBuffer",
			"url": "http://127.0.0.1:<$initiator.http.port>/test/timeout",
			"successCodes": "2xx",
			"timeout": 5000,
			"$set": "timeoutObj"
		}, {
			"$function": "console.log",
			"$args": [
				"{$timeoutObj.data}"
			],
			"$important": true
		}]

	},
	"xtest-every-000": {
		"data": {
			"articleSelector":
				"//article/media[@media2article-type=\"photo\"]"
		},

		"tasks": [{
			"$function":"Array",
			"$args":[
				[ "data", "must", "flow" ],
				[ "in", "nested", "loops" ]
			],
			"$set":"testArr"
		}, {
			"$every":"{$testArr}",
			"$collect":"result1",
			"$tasks":[{
				"$every":"[*every.item]",
				"$collect":"result2",
				"$tasks":[{
					"$function":"toUpperCase",
					"$origin":"[*every.item]",
					"$set":"result2"
				},
				{
					"$function":"console.log",
					"$args":[
						"Running $every...",
						"index: [*every.index], item: [*result2]",
						"array: {*testArr}"
					]
				}],
				"$set":"result1"
			}],
			"$set":"mappedArr"
		}, {
			"$function":"Array.prototype.join",
			"$args":[" "],
			"$scope":"{$mappedArr}",
			"$set":"resultMessage"
		}]

	}
}
