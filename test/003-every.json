		"expect": "ok",
		"tasks": [{
			"$every": [1, 2, 4],
			"$tasks": [{
				"$function": "dfDataObject",
				"$set": "object"
			}],
			"$collect": "object",
			"$set": "object"
		}, {
			"$function": "console.log",
			"$args": "{$object}"
		}, {
			"$every": [1, 2, 4],
